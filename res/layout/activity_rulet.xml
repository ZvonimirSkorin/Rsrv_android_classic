<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rulet">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/akcionatrakarujlet"
        android:background="@drawable/colorica"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/ruletNazad"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/kolonekakve"
        android:id="@+id/pravirulet"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:elevation="10dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:rotation="180"
        android:visibility="invisible"
        android:elevation="10dp"
        android:id="@+id/zbic"
        android:layout_marginBottom="-19dp"
        android:layout_above="@+id/pravirulet"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/zbic"/>

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/unesiKodrulet"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:textSize="30sp"
    android:hint="Unesi kod"
    android:textColorHint="@color/black"
    android:textColor="@color/black"
    android:background="@drawable/colorica"
    android:padding="10dp"/>
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnPovecavanje"
        android:visibility="visible"
        android:gravity="center"
        android:layout_below="@id/unesiKodrulet"
        android:layout_marginTop="15dp"
        android:text="R"
        android:textSize="25sp"
        android:textStyle="bold"
        android:backgroundTint="@color/black"
        android:foregroundGravity="center"
        android:layout_centerInParent="true"/>

</RelativeLayout>